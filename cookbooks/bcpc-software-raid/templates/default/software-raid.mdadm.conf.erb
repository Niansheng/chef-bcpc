DEVICE <%= @devices.join(' ') %>

CREATE owner=root group=disk mode=0660 auto=yes

# disable homehost so that kernel auto-assembly does not prepend hostname to the array name on reboot
HOMEHOST <none>

# auto-assembly should work but manually specifying array composition as a backup
ARRAY <%= @md_device %> name=<%= ::File.basename @md_device %> devices=<%= @devices.join(',') %>
